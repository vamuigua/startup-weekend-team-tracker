<h3>Add New Member</h3>

<form action="/members" method="post">
	<div class="form-group">
	    <input id="team_id" name="team_id" type="hidden" value="<%= @team.id() %>">
		<label class="form-label" for='member_name'>Assign a Team Name:</label>
		<input class="form-control" id="member_name" name="member_name" type="text" placeholder="List Member name" autofocus>
		<button type="submit" class="btn btn-primary">Add Member</button>
	</div>
</form>